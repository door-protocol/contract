{
  "name": "door-protocol",
  "version": "0.1.0",
  "description": "DOOR Protocol - Structured DeFi Product with Waterfall Distribution",
  "keywords": [
    "ethereum",
    "solidity",
    "defi",
    "mantle",
    "waterfall",
    "tranche",
    "door"
  ],
  "homepage": "https://door-protocol-frontend.vercel.app",
  "bugs": {
    "url": "https://github.com/door-protocol/contract/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/door-protocol/contract.git"
  },
  "license": "MIT",
  "author": "DOOR Protocol Team",
  "contributors": [
    "kyle-park-io <andy3638@naver.com>",
    "rrabit42 <gegiraffe@gmail.com>"
  ],
  "main": "index.js",
  "scripts": {
    "abi:extract": "ts-node scripts/extract-abis.ts",
    "anvil": "anvil",
    "clean": "hardhat clean && forge clean",
    "compile": "hardhat compile",
    "compile:forge": "forge build",
    "deploy:forge:local": "forge script scripts/forge/Deploy.s.sol:Deploy --rpc-url http://localhost:8545 --broadcast",
    "deploy:forge:testnet": "source .env && forge script scripts/forge/Deploy.s.sol:Deploy --rpc-url https://rpc.sepolia.mantle.xyz --broadcast --verify",
    "deploy:forge:testnet:mint": "source .env && forge script scripts/forge/Deploy.s.sol:DeployTestnet --rpc-url https://rpc.sepolia.mantle.xyz --broadcast --verify",
    "deploy:local:mock": "hardhat run scripts/hardhat/deploy-mock-viem.ts --network localhost",
    "deploy:local:mock:ethers": "hardhat run scripts/hardhat/deploy-mock-ethers.ts --network localhost",
    "deploy:testnet": "hardhat run scripts/hardhat/deploy-testnet-viem.ts --network mantleTestnet",
    "deploy:testnet:ethers": "hardhat run scripts/hardhat/deploy-testnet-ethers.ts --network mantleTestnet",
    "deploy:testnet:mock": "hardhat run scripts/hardhat/deploy-mock-viem.ts --network mantleTestnet",
    "deploy:testnet:mock:ethers": "hardhat run scripts/hardhat/deploy-mock-ethers.ts --network mantleTestnet",
    "fmt": "forge fmt",
    "fmt:check": "forge fmt --check",
    "init:core-epoch": "hardhat run scripts/hardhat/initialize-core-epoch.ts --network mantleTestnet",
    "lint": "solhint 'src/**/*.sol' && eslint 'scripts/**/*.ts'",
    "lint:sol": "solhint 'src/**/*.sol'",
    "lint:ts": "eslint 'scripts/**/*.ts'",
    "node": "hardhat node",
    "prettier": "prettier --write .",
    "recover:deployment": "hardhat run scripts/hardhat/recover-partial-deployment.ts --network mantleTestnet",
    "sort-package-json": "sort-package-json package.json",
    "test": "hardhat test",
    "test:coverage": "hardhat coverage",
    "test:coverage:forge": "forge coverage",
    "test:forge": "forge test",
    "test:forge:gas": "forge test --gas-report",
    "test:forge:v": "forge test -vvv",
    "verify:mainnet": "hardhat verify --network mantle",
    "verify:testnet": "hardhat verify --network mantleTestnet"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.3",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.3",
    "@nomicfoundation/hardhat-viem": "^2.0.0",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "chai": "^4.5.0",
    "dotenv": "^16.3.1",
    "eslint": "^8.57.0",
    "ethers": "^6.16.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^3.7.4",
    "solhint": "^6.0.2",
    "solidity-coverage": "^0.8.17",
    "sort-package-json": "^3.5.1",
    "ts-node": "^10.9.2",
    "typechain": "^8.3.2",
    "typescript": "^5.3.0",
    "viem": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
